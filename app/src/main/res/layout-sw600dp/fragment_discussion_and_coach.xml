<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com1032.cw2.sk00763.improov.DiscussionAndCoach"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_gravity="center"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center">

            <EditText
                android:id="@+id/searchdiscussion"
                android:layout_width="440sp"
                android:layout_height="35sp"
                android:layout_gravity="center"
                android:background="@drawable/search_layout"
                android:hint="Search..."
                android:padding="5sp" />

            <ImageView
                android:id="@+id/searchpic"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@drawable/search"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/firstlay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finddiscussions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="130dp"
                android:text="Discussions"
                android:textAllCaps="false"
                android:background="@drawable/ic_check_white_48dp"
                android:textColor="#000000"
                android:textSize="28dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/findcoaches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programs"
                android:textColor="#A1A1A1"
                android:textAllCaps="false"
                android:background="@drawable/ic_check_white_48dp"
                android:textSize="28dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="500dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#000000"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_gravity="left"
            android:layout_marginTop="30dp"
            android:text="Based on your topics"
            android:textColor="#000000"
            android:textSize="28dp"
             />

        <LinearLayout
            android:layout_width="460dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#A1A1A1"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">
        </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22dp"
                android:text="Create Discussion"
                android:textColor="#3253F9"
                android:layout_alignParentEnd="true"
                android:layout_gravity="right"
                android:layout_marginRight="10dp"
                android:id="@+id/creatediscussion"
                />
        </LinearLayout>
        </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discussionlist1"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_marginTop="5sp"
                android:layout_weight="10" />

    </LinearLayout>