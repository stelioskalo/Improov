<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com1032.cw2.sk00763.improov.SeeAllDiscussions">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"
            android:id="@+id/backseeall"
            android:layout_alignParentStart="true"
            android:textSize="32dp"
            android:textColor="#3253F9"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/seeallname"
        android:layout_gravity="center"
        android:text="Temp"
        android:textSize="32dp"
        android:textColor="#000000"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_gravity="center"
        android:gravity="center">

        <EditText
            android:id="@+id/searchdiscussion"
            android:layout_width="500sp"
            android:layout_height="35sp"
            android:layout_gravity="center"
            android:background="@drawable/search_layout"
            android:hint="Search..."
            android:padding="5sp" />

        <ImageView
            android:id="@+id/searchpic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
    android:id="@+id/seealllist"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_weight="10" />

</LinearLayout>
