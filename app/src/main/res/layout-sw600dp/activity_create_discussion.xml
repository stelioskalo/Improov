<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com1032.cw2.sk00763.improov.CreateDiscussion"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:id="@+id/canceldiscussion"
                android:textSize="24dp"
                android:textColor="#3253F9"
                android:layout_marginLeft="5dp"
                android:layout_alignParentStart="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:id="@+id/savediscussion"
                android:textSize="24dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:textColor="#3253F9"
                />

        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please type what the discussion is about"
            android:layout_gravity="center"
            android:layout_marginTop="60dp"
            android:textSize="24dp"
            android:textColor="#000000" />

        <EditText
            android:layout_width="550dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:textSize="24dp"
            android:gravity="top|left"
            android:layout_marginTop="20dp"
            android:id="@+id/discussionabout"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select topic of discussion"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:textSize="24dp"
            android:textColor="#000000" />

        <Spinner
            android:layout_marginTop="30dp"
            android:backgroundTint="#3253F9"
            android:textColorHint="#000000"
            android:id="@+id/topicpinner"
            android:hint="Sports"
            android:textColor="#000000"
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Write the first post"
            android:textColor="#000000"
            android:textSize="24dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"/>

        <EditText
            android:layout_width="550dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:gravity="top|left"
            android:textSize="18dp"
            android:layout_marginTop="24dp"
            android:id="@+id/post"/>

    </LinearLayout>
</ScrollView>