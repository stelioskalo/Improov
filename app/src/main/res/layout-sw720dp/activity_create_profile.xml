<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"
    >
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com1032.cw2.sk00763.improov.CreateProfile"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="90dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/create_prof"
                android:textSize="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textStyle="bold"
                android:textColor="#000"/>


                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="280dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="280dp"
                    android:layout_gravity="center"
                    android:src="@drawable/edit"
                    android:id="@+id/createprofilepic"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/addpicture"
                android:layout_gravity="center"
                android:textSize="30dp"
                android:layout_marginTop="10dp"
                android:id="@+id/addprofilepic"
                android:textColor="#3253F9"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/namesurname"
                android:layout_marginTop="30dp"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editprofname"
                    android:text="name"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/editprofsurname"
                    android:text="surname"
                    android:textSize="40dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"/>

            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/profileContent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="10dp">



                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                    <TextView
                        android:id="@+id/bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/bio"
                        android:textColor="#000000"
                        android:textSize="30dp" />

                    <EditText
                        android:id="@+id/edit_bio"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="bottom"
                        android:hint="@string/maxchar"
                        android:paddingRight="30dp"
                        android:textColor="#000000"
                        android:textSize="30dp"

                        />

                </RelativeLayout>


            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/interests"
                android:textSize="40dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp">


                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/marketing"
                        android:id="@+id/topicpic1"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/marketing"
                        android:id="@+id/topicpic2"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/marketing"
                        android:id="@+id/topicpic3"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:layout_marginRight="50dp"
                        android:src="@drawable/marketing"
                        android:id="@+id/topicpic4"
                        />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="110dp"
                        android:layout_height="110dp"
                        android:layout_gravity="center"
                        android:src="@drawable/marketing"
                        android:id="@+id/topicpic5"
                        />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/topicslayout"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="-6dp">


                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp">
                    <TextView
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic1"
                        android:textSize="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_marginLeft="10dp"
                        android:id="@+id/topic1"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic2"
                        android:textSize="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:id="@+id/topic2"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="-2dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic3"
                        android:textSize="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:id="@+id/topic3"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="-5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic4"
                        android:textSize="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:id="@+id/topic4"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="-5dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Topic5"
                        android:textSize="18dp"
                        android:layout_marginTop="3dp"
                        android:layout_gravity="center"
                        android:id="@+id/topic5"/>
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:layout_marginTop="20dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/qualifications"
                android:textSize="40dp"
                android:textColor="#000000"
                android:textStyle="bold"/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:elevation="10dp"
                app:cardCornerRadius="15dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    >

                    <TextView
                        android:id="@+id/qualifications"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/qualificaionsdesc"
                        android:textColor="#000000"
                        android:textSize="30dp" />

                    <EditText
                        android:id="@+id/edit_qualifications"
                        android:layout_width="match_parent"
                        android:layout_height="250dp"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="20dp"
                        android:gravity="bottom"
                        android:hint="@string/maxchar"
                        android:paddingRight="30dp"
                        android:textColor="#000000"
                        android:textSize="30dp"

                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="-30dp"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/skip"
                android:textSize="40dp"
                android:layout_marginLeft="10dp"
                android:id="@+id/skipfromcreate"
                android:textColor="#3253F9"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:layout_alignParentEnd="true"
                android:textSize="40dp"
                android:textStyle="bold"
                android:layout_marginRight="10dp"
                android:textColor="#3253F9"
                android:id="@+id/nextfromcreate"/>
        </RelativeLayout>



    </RelativeLayout>
</ScrollView>