<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    card_view:cardBackgroundColor="#FFFFFF"
    card_view:cardCornerRadius="8dp">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        tools:context="com1032.cw2.sk00763.improov.ReadyToPayActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Accepted Request"
            android:textStyle="bold"
            android:textSize="38dp"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_width="580dp"
            android:layout_height="0.2dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#A1A1A1"></LinearLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="350dp"
            android:layout_height="350dp"
            android:layout_gravity="center"
            android:layout_marginTop="75dp"
            android:src="@drawable/usericon"
            android:id="@+id/payimage"/>

        <TextView
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_margin="15dp"
            android:layout_height="wrap_content"
            android:text="Name of Program"
            android:layout_marginTop="35dp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:id="@+id/payname"
            android:textSize="38dp"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_margin="15dp"
            android:textSize="34dp"
            android:textAlignment="center"
            android:text="Accepted"
            android:textColor="#414141"
            android:id="@+id/payparagraph"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_margin="15dp"
            android:textSize="34dp"
            android:text="please pay"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="#000000"
            android:id="@+id/payinstruct"/>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="8dp"
                card_view:cardBackgroundColor="#FFFFFF"
                android:layout_alignParentBottom="true">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#ffffff"
                    android:layout_gravity="center"
                    android:layout_margin="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Pay with"
                        android:textStyle="bold"
                        android:textColor="#000000"
                        android:textSize="42dp"
                        android:layout_gravity="center"/>
                    <ImageView
                        android:layout_width="230dp"
                        android:layout_height="80dp"
                        android:layout_marginLeft="10dp"
                        android:src="@drawable/paypal"
                        />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>