<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="center"
    android:orientation="vertical"
    tools:context="com1032.cw2.sk00763.improov.DiscussionAndCoach"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:gravity="center">

        <EditText
            android:id="@+id/searchdiscussion"
            android:layout_width="640sp"
            android:layout_height="35sp"
            android:layout_gravity="center"
            android:background="@drawable/search_layout"
            android:hint="Search..."
            android:padding="5sp" />

        <ImageView
            android:id="@+id/searchpic"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/search"/>

    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/finddiscussions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="180dp"
                android:text="Discussions"
                android:textColor="#000000"
                android:textAllCaps="false"
                android:background="@drawable/ic_check_white_48dp"
                android:textSize="36dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/findcoaches"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Programs"
                android:textAllCaps="false"
                android:background="@drawable/ic_check_white_48dp"
                android:textColor="#A1A1A1"
                android:textSize="36dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="700dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="15dp"
            android:background="#000000"></LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"
            android:text="Based on your topics"
            android:textColor="#000000"
            android:textSize="32dp"
            />

        <LinearLayout
            android:layout_width="580dp"
            android:layout_height="1dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:background="#A1A1A1"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="Create Discussion"
                android:textColor="#3253F9"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="10dp"
                android:id="@+id/creatediscussion"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:orientation="vertical">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/discussionlist1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5sp"
                android:layout_weight="10" />
        </LinearLayout>
    </LinearLayout>
