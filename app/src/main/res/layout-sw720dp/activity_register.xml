<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#94A9D8"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".Register">

    <TextView
        android:id="@+id/register_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:text="@string/register"
        android:textColor="#fff"
        android:textSize="90sp"
        android:layout_marginTop="-60dp"
        android:layout_marginBottom="80dp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/name_edit_register"
        android:layout_width="700sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="@string/name"
        android:inputType="text"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/surname_edit_register"
        android:layout_width="700sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="Surname"
        android:inputType="text"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="40sp"
        android:layout_marginTop="30dp"/>

    <EditText
        android:layout_marginTop="30dp"
        android:id="@+id/email_edit_register"
        android:layout_width="700sp"
        android:layout_height="wrap_content"
        android:backgroundTint="#fff"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/password_edit_register"
        android:layout_width="700sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#fff"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="40sp" />

    <EditText
        android:id="@+id/c_password_edit_register"
        android:layout_width="700sp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:backgroundTint="#fff"
        android:hint="@string/confirmpass"
        android:inputType="textPassword"
        android:textColor="#fff"
        android:textColorHint="#fff"
        android:textSize="40sp" />

    <CheckBox
        android:layout_marginTop="30dp"
        android:id="@+id/data_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:shadowColor="#FFF"
        android:text="@string/gdpr"
        android:textSize="25dp"
        android:textColor="#FFFFFF" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="540sp"
        android:layout_height="70sp"
        android:layout_marginTop="140sp"
        android:background="#2E4477"
        android:text="@string/submitdetails"
        android:textColor="#fff"
        android:textSize="40sp" />

    <Button
        android:id="@+id/btn_login_from_reg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15sp"
        android:background="@null"
        android:text="@string/registered"
        android:textColor="#fff"
        android:textSize="28sp" />

</LinearLayout>