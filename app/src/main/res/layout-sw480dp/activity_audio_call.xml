<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com1032.cw2.sk00763.improov.CallActivity"
    android:background="#02273A">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="You are on call..."
        android:textSize="20dp"
        android:textColor="#ffffff"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="230dp"
        android:layout_height="230dp"
        android:src="@drawable/usericon"
        android:layout_gravity="center"
        android:id="@+id/audiocallimage"
        android:layout_marginTop="30dp"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:id="@+id/audiocallname"
            android:textStyle="bold"
            android:layout_marginRight="20dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Surname"
            android:textColor="#ffffff"
            android:textSize="28dp"
            android:textStyle="bold"
            android:id="@+id/audiocallsurname"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:layout_marginTop="140dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/endaudiocall"
            android:src="@drawable/decline" />
    </LinearLayout>

</LinearLayout>
