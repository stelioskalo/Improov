<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient">

    <RelativeLayout
        android:id="@+id/icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="14dp"
        android:layout_marginBottom="24dp">

        <ImageView
            android:id="@+id/home"
            android:layout_width="50dp"
            android:layout_centerVertical="true"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="22dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/team"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/home"
            android:src="@drawable/team" />


        <ImageView
            android:id="@+id/todo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/team"
            android:layout_marginRight="40dp"
            android:src="@drawable/session" />


        <ImageView
            android:id="@+id/messages"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="40dp"
            android:layout_toRightOf="@+id/todo"
            android:src="@drawable/message" />

        <ImageView
            android:id="@+id/nottifciation"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/messages"
            android:src="@drawable/nottification" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="20dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:id="@+id/hometext"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="30dp"
            android:textColor="#A1A1A1"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXPLORE"
            android:id="@+id/exploretext"
            android:layout_marginRight="27dp"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/hometext"
            android:textColor="#A1A1A1"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SESSIONS"
            android:id="@+id/challengetext"
            android:layout_marginRight="22dp"
            android:layout_toRightOf="@+id/exploretext"
            android:textColor="#A1A1A1"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MESSAGES"
            android:id="@+id/messagingtext"
            android:layout_marginRight="23dp"
            android:layout_toRightOf="@+id/challengetext"
            android:textColor="#A1A1A1"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ALERTS"
            android:id="@+id/nottificationtext"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/messagingtext"
            android:textColor="#A1A1A1"
            android:textSize="14dp"/>


    </RelativeLayout>

</RelativeLayout>
